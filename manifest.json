{
  "manifest_version": 3,
  "name": "trollblock",
  "browser_specific_settings": {
    "gecko": {
      "id": "sencerhan76@gmail.com",
      "strict_min_version": "109.0"
    }
  },
  "version": "1.0.2",
  "description": "Toplu troll engelleyici Troll blocker for X and Ekşi",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*.twitter.com/*",
    "*://*.x.com/*",
    "*://*.eksisozluk.com/*"
  ],
  "background": {
    "service_worker": "src/background/chrome-worker.js",
    "scripts": [
      "src/background/firefox-worker.js"
    ],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.eksisozluk.com/*",
        "*://*.x.com/*",
        "*://*.twitter.com/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ],
  "action": {
    "default_title": "Trollblock Ayarları"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "gif/*",
        "gif/boom.gif",
        "src/options/options.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": true
  }
}